<Window x:Class="KioscoApp.Client.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Productos" Height="500" Width="900">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Grilla de productos -->
        <DataGrid x:Name="GridProducts"
                  AutoGenerateColumns="False"
                  Grid.Row="0"
                  Margin="0,0,0,10"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  RowHeight="35">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código" Binding="{Binding Code}" Width="100"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="80"/>
                <DataGridTextColumn Header="Categoría" Binding="{Binding Category}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones de acción -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Content="Nuevo" Width="80" Click="BtnNuevo_Click" Margin="0,0,10,0"/>
            <Button Content="Modificar" Width="80" Click="BtnModificar_Click" Margin="0,0,10,0"/>
            <Button Content="Eliminar" Width="80" Click="BtnEliminar_Click" Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>
