<Window x:Class="KioscoApp.Client.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KioscoApp.Client"
        Title="Gestión de Productos" Height="600" Width="1000"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <!-- Colores -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#FF3498DB"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#FF2C3E50"/>
        <SolidColorBrush x:Key="LightBlue" Color="#FFEBF5FB"/>

        <!-- Estilos -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF5DADE2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FilterTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
        </Style>

        <!-- Converter para el estado -->
        <local:BoolToEstadoConverter x:Key="BoolToEstadoConverter"/>
    </Window.Resources>

    <Grid>
        <!-- Barra superior azul -->
        <Border Background="{StaticResource DarkBlue}" 
                Height="50" 
                VerticalAlignment="Top">
            <TextBlock Text="GESTIÓN DE PRODUCTOS" 
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="16"
                       VerticalAlignment="Center"
                       Margin="15,0"/>
        </Border>

        <!-- Contenido principal -->
        <Grid Margin="15,60,15,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Fila 1: Botones de acción -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="BtnNuevo" 
                        Content="➕ Nuevo" 
                        Style="{StaticResource ActionButton}"
                        Click="BtnNuevo_Click"/>
                <Button x:Name="BtnModificar" 
                        Content="✏️ Modificar" 
                        Style="{StaticResource ActionButton}"
                        Click="BtnModificar_Click"/>
                <Button x:Name="BtnDiscontinuar" 
                        Content="🚫 Discontinuar" 
                        Style="{StaticResource ActionButton}"
                        Background="#E67E22"
                        Click="BtnDiscontinuar_Click"/>
                <Button x:Name="BtnReactivar" 
                        Content="✅ Reactivar" 
                        Style="{StaticResource ActionButton}"
                        Background="#27AE60"
                        Click="BtnReactivar_Click"
                        Visibility="Collapsed"/>
            </StackPanel>

            <!-- Fila 2: Filtros -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Búsqueda por texto -->
                <TextBlock Grid.Column="0" 
                           Text="Buscar:" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           FontWeight="SemiBold"/>
                <TextBox x:Name="TxtBuscar" 
                         Grid.Column="1"
                         Style="{StaticResource FilterTextBox}"
                         TextChanged="TxtBuscar_TextChanged"
                         ToolTip="Buscar por código o nombre"/>

                <!-- Filtro por categoría -->
                <TextBlock Grid.Column="2" 
                           Text="Categoría:" 
                           VerticalAlignment="Center"
                           Margin="20,0,10,0"
                           FontWeight="SemiBold"/>
                <ComboBox x:Name="CmbCategoria" 
                          Grid.Column="3"
                          Height="28"
                          SelectionChanged="CmbCategoria_SelectionChanged"
                          BorderBrush="{StaticResource PrimaryBlue}">
                    <ComboBoxItem Content="Todas" IsSelected="True"/>
                    <ComboBoxItem Content="Bebidas"/>
                    <ComboBoxItem Content="Golosinas"/>
                    <ComboBoxItem Content="Cigarrillos"/>
                    <ComboBoxItem Content="Snacks"/>
                    <ComboBoxItem Content="Lácteos"/>
                    <ComboBoxItem Content="Otros"/>
                </ComboBox>

                <!-- Checkbox para ver discontinuados -->
                <CheckBox x:Name="ChkMostrarDiscontinuados" 
                          Grid.Column="5"
                          Content="Mostrar Discontinuados"
                          VerticalAlignment="Center"
                          Margin="20,0,0,0"
                          FontWeight="SemiBold"
                          Foreground="{StaticResource DarkBlue}"
                          Checked="ChkMostrarDiscontinuados_Changed"
                          Unchecked="ChkMostrarDiscontinuados_Changed"/>
            </Grid>

            <!-- Fila 3: DataGrid -->
            <Border Grid.Row="2" 
                    BorderBrush="{StaticResource PrimaryBlue}" 
                    BorderThickness="1"
                    CornerRadius="5">
                <DataGrid x:Name="GridProducts"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          RowHeight="35"
                          AlternatingRowBackground="#F8F9FA"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          MouseDoubleClick="GridProducts_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Código" Binding="{Binding Code}" Width="100">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{StaticResource LightBlue}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{StaticResource LightBlue}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Precio" Binding="{Binding Price, StringFormat=C}" Width="100">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{StaticResource LightBlue}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="80">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{StaticResource LightBlue}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Categoría" Binding="{Binding Category}" Width="120">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{StaticResource LightBlue}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Estado" Binding="{Binding IsActive, Converter={StaticResource BoolToEstadoConverter}}" Width="100">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{StaticResource LightBlue}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <Setter Property="Foreground" Value="#27AE60"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>

                    <!-- Menú contextual -->
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="📝 Ver Detalles" Click="MenuVerDetalles_Click"/>
                            <MenuItem Header="✏️ Modificar" Click="BtnModificar_Click"/>
                            <Separator/>
                            <MenuItem x:Name="MenuDiscontinuar" Header="🚫 Discontinuar" Click="BtnDiscontinuar_Click"/>
                            <MenuItem x:Name="MenuReactivar" Header="✅ Reactivar" Click="BtnReactivar_Click" Visibility="Collapsed"/>
                            <Separator/>
                            <MenuItem Header="🗑️ Eliminar" Click="MenuEliminar_Click" Foreground="#E74C3C"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>

                    <!-- Estilo para filas discontinuadas -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                    <Setter Property="Background" Value="#FFE8E8"/>
                                    <Setter Property="Opacity" Value="0.7"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>