<Window x:Class="KioscoApp.Client.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo artículo" Height="550" Width="750" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <!-- Colores - Mismo azul que MainWindow -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#FF3498DB"/>
        <SolidColorBrush x:Key="LightBlue" Color="#FFEBF5FB"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#FF2C3E50"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#FF5DADE2"/>

        <!-- Estilos -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="TabStyle" TargetType="TabItem">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightBlue}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,5"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barra superior azul con título -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkBlue}"
                Padding="10,8"
                Margin="-15,-15,-15,0">
            <TextBlock Text="DATOS DEL ARTÍCULO" 
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="13"/>
        </Border>

        <!-- Sección superior: Código y Descripción -->
        <Grid Grid.Row="1" Margin="0,15,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Código -->
            <TextBlock Text="Código: *" 
                       Grid.Row="0" Grid.Column="0"
                       Style="{StaticResource LabelStyle}"
                       Foreground="{StaticResource DarkBlue}"/>
            <TextBox x:Name="TxtCode" 
                     Grid.Row="0" Grid.Column="1"
                     Style="{StaticResource TextBoxStyle}"
                     Margin="5,5,5,5"/>

            <!-- Descripción -->
            <TextBlock Text="Descripción: *" 
                       Grid.Row="1" Grid.Column="0"
                       Style="{StaticResource LabelStyle}"
                       Foreground="{StaticResource DarkBlue}"
                       Margin="5,8,5,5"/>
            <TextBox x:Name="TxtDescription" 
                     Grid.Row="1" Grid.Column="1"
                     Style="{StaticResource TextBoxStyle}"
                     Margin="5,8,5,5"/>
        </Grid>

        <!-- TabControl con las pestañas -->
        <TabControl Grid.Row="2" 
                    Margin="0,15,0,15"
                    x:Name="MainTabControl"
                    BorderBrush="{StaticResource PrimaryBlue}"
                    BorderThickness="1">

            <!-- Tab General -->
            <TabItem Header="General" Style="{StaticResource TabStyle}">
                <Grid Margin="15" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Observaciones -->
                    <TextBlock Text="Observaciones:" 
                   Grid.Row="0" Grid.Column="0"
                   Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtObservaciones" 
                 Grid.Row="0" Grid.Column="1"
                 Style="{StaticResource TextBoxStyle}"
                 Margin="5"/>

                    <!-- Unidad de Venta -->
                    <TextBlock Text="Unidad Venta:" 
                   Grid.Row="1" Grid.Column="0"
                   Style="{StaticResource LabelStyle}"
                   Margin="5,10,5,5"/>
                    <ComboBox x:Name="CmbUnidadVenta" 
                  Grid.Row="1" Grid.Column="1"
                  Width="200"
                  Height="24"
                  Margin="5,10,5,5"
                  HorizontalAlignment="Left"
                  BorderBrush="{StaticResource PrimaryBlue}">
                        <ComboBoxItem Content="UN - Unidad" Tag="UN" IsSelected="True"/>
                        <ComboBoxItem Content="KG - Kilogramo" Tag="KG"/>
                        <ComboBoxItem Content="GR - Gramos" Tag="GR"/>
                        <ComboBoxItem Content="LTS - Litros" Tag="LTS"/>
                        <ComboBoxItem Content="ML - Mililitros" Tag="ML"/>
                        <ComboBoxItem Content="CC - Centímetros Cúbicos" Tag="CC"/>
                    </ComboBox>

                    <!-- Rubro -->
                    <TextBlock Text="Rubro:" 
                   Grid.Row="2" Grid.Column="0"
                   Style="{StaticResource LabelStyle}"
                   Margin="5,10,5,5"/>
                    <ComboBox x:Name="CmbRubro" 
                  Grid.Row="2" Grid.Column="1"
                  Margin="5,10,5,5"
                  Height="24"
                  BorderBrush="{StaticResource PrimaryBlue}"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"/>

                    <!-- Nota informativa -->
                    <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                Background="{StaticResource LightBlue}"
                BorderBrush="{StaticResource PrimaryBlue}"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="5,20,5,5"
                VerticalAlignment="Top">
                        <StackPanel>
                            <TextBlock Text="ℹ️ Información de Precios" 
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="{StaticResource DarkBlue}"
                           Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap"
                           Foreground="#666666"
                           FontSize="11">
                    <Run Text="Los precios de venta y costo se configuran en la pestaña "/>
                    <Run Text="'Precios'" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}"/>
                    <Run Text=", donde puedes definir diferentes listas de precios para este producto."/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab Foto -->
            <TabItem Header="Foto" Style="{StaticResource TabStyle}">
                <Grid Margin="15" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Imagen del Producto:" 
                               Style="{StaticResource LabelStyle}"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource DarkBlue}"
                               Margin="5,5,5,15"/>

                    <!-- Imagen del producto -->
                    <Border Grid.Row="1"
                            x:Name="BorderImagen"
                            BorderBrush="{StaticResource PrimaryBlue}"
                            BorderThickness="2"
                            Background="#F8F9FA"
                            CornerRadius="5"
                            Padding="10"
                            Width="400"
                            Height="300"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <Image x:Name="ImgProducto" 
                               Stretch="Uniform"/>
                    </Border>

                    <!-- Placeholder cuando no hay imagen -->
                    <Grid Grid.Row="1"
                          x:Name="PlaceholderImagen"
                          Width="400"
                          Height="300"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                        <Rectangle Stroke="{StaticResource PrimaryBlue}"
                                   StrokeThickness="2"
                                   StrokeDashArray="4,2"
                                   Fill="#F8F9FA"
                                   RadiusX="5"
                                   RadiusY="5"/>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="📷" 
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource AccentBlue}"/>
                            <TextBlock Text="Sin imagen" 
                                       FontSize="16"
                                       Foreground="#999999"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Botones -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0">
                        <Button x:Name="BtnCargarImagen"
                                Content="📁 Cargar Imagen" 
                                Width="150"
                                Height="35"
                                Click="BtnCargarImagen_Click"
                                Style="{StaticResource ButtonStyle}"/>
                        <Button x:Name="BtnEliminarImagen"
                                Content="🗑️ Eliminar Imagen" 
                                Width="150"
                                Height="35"
                                Margin="10,0,0,0"
                                Click="BtnEliminarImagen_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                                    <Setter Property="Background" Value="#E74C3C"/>
                                    <Setter Property="BorderBrush" Value="#E74C3C"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C0392B"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab Precios -->
            <TabItem Header="Precios" Style="{StaticResource TabStyle}">
                <Grid Margin="15" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Precios por Lista:" 
                               Style="{StaticResource LabelStyle}"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource DarkBlue}"
                               Margin="5,5,5,15"/>

                    <!-- DataGrid para mostrar las listas de precios -->
                    <DataGrid x:Name="DgPrecios"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              BorderBrush="{StaticResource PrimaryBlue}"
                              BorderThickness="1"
                              Margin="5">
                        <DataGrid.Columns>
                            <!-- Lista - solo lectura -->
                            <DataGridTextColumn Header="Lista" 
                        Binding="{Binding NombreLista}" 
                        Width="150"
                        IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Costo - EDITABLE -->
                            <DataGridTextColumn Header="Costo" 
                        Binding="{Binding Costo, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" 
                        Width="100"
                        IsReadOnly="False">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>

                            <!-- IVA - solo lectura por ahora -->
                            <DataGridTextColumn Header="IVA" 
                        Binding="{Binding IVA}" 
                        Width="60"
                        IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- % Utilidad - EDITABLE -->
                            <DataGridTextColumn Header="% Utilidad" 
                        Binding="{Binding PorcentajeUtilidad, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" 
                        Width="100"
                        IsReadOnly="False">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>

                            <!-- Precio Venta - CALCULADO automáticamente -->
                            <DataGridTextColumn Header="Precio Venta" 
                        Binding="{Binding PrecioVenta, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" 
                        Width="120"
                        IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- % Imp. Int. - solo lectura -->
                            <DataGridTextColumn Header="% Imp. Int." 
                        Binding="{Binding PorcentajeImpInt, StringFormat=N2}" 
                        Width="100"
                        IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Última actualización -->
                            <DataGridTextColumn Header="Ult. actualización" 
                        Binding="{Binding UltimaActualizacion, StringFormat=dd/MM/yyyy}" 
                        Width="*"
                        IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#666666"/>
                                        <Setter Property="FontSize" Value="10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="2"
                            x:Name="BtnModificar"
                            Content="Modificar"
                            Width="100"
                            Height="30"
                            HorizontalAlignment="Left"
                            Margin="5,10,5,5"
                            Style="{StaticResource ButtonStyle}"
                            Click="BtnModificar_Click"/>
                </Grid>
            </TabItem>

            <!-- Tab Proveedores -->
            <TabItem Header="Proveedores" Style="{StaticResource TabStyle}">
                <Grid Margin="15" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                   Text="Proveedores del Producto:" 
                   Style="{StaticResource LabelStyle}"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="{StaticResource DarkBlue}"
                   Margin="5,5,5,15"/>

                    <!-- DataGrid para mostrar los proveedores -->
                    <DataGrid x:Name="DgProveedores"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  BorderBrush="{StaticResource PrimaryBlue}"
                  BorderThickness="1"
                  Margin="5"
                  SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" 
                                    Binding="{Binding Numero}" 
                                    Width="40"
                                    IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Nombre" 
                                    Binding="{Binding NombreProveedor}" 
                                    Width="*"
                                    IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Costo" 
                                    Binding="{Binding Costo, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Última actualización" 
                                    Binding="{Binding UltimaActualizacion, StringFormat=dd/MM/yyyy HH:mm}" 
                                    Width="150"
                                    IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#666666"/>
                                        <Setter Property="FontSize" Value="10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Predeterminado" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding TextoPredeterminado}"
                                    Width="140"
                                    Height="24"
                                    Click="BtnPredeterminado_Click"
                                    Tag="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding EsPredeterminado}" Value="True">
                                                            <Setter Property="Background" Value="#27AE60"/>
                                                            <Setter Property="BorderBrush" Value="#27AE60"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Acciones" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Quitar"
                                    Width="70"
                                    Height="24"
                                    Click="BtnQuitarProveedor_Click"
                                    Tag="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                                                    <Setter Property="Background" Value="#E74C3C"/>
                                                    <Setter Property="BorderBrush" Value="#E74C3C"/>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="5,10,5,5">
                        <Button x:Name="BtnAgregarProveedor"
                    Content="+ Agregar Proveedor"
                    Width="150"
                    Height="30"
                    Style="{StaticResource ButtonStyle}"
                    Click="BtnAgregarProveedor_Click"/>
                        <Button x:Name="BtnGuardarProveedores"
                    Content="Guardar Cambios"
                    Width="130"
                    Height="30"
                    Margin="10,0,0,0"
                    Style="{StaticResource ButtonStyle}"
                    Click="BtnGuardarProveedores_Click"/>
                        <TextBlock x:Name="TxtContadorProveedores"
                       Text="0 / 10 proveedores"
                       VerticalAlignment="Center"
                       Margin="15,0,0,0"
                       Foreground="#666666"
                       FontSize="11"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab Stock -->
            <TabItem Header="Stock" Style="{StaticResource TabStyle}">
                <Grid Margin="15" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Título con ícono de ayuda -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,5,5,15">
                        <TextBlock Text="Control de Stock:" 
                                   Style="{StaticResource LabelStyle}"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource DarkBlue}"/>
                        <Button x:Name="BtnAyudaStock"
                                Content="❓"
                                Width="24"
                                Height="24"
                                Margin="10,0,0,0"
                                Background="{StaticResource AccentBlue}"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="12"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="BtnAyudaStock_Click"
                                ToolTip="Información sobre control de stock"/>
                    </StackPanel>

                    <!-- Stock Actual (Solo lectura) -->
                    <Border Grid.Row="1" 
                            Background="#F8F9FA"
                            BorderBrush="{StaticResource PrimaryBlue}"
                            BorderThickness="2"
                            CornerRadius="5"
                            Padding="15"
                            Margin="5,0,5,20">
                        <StackPanel>
                            <TextBlock Text="Stock Actual" 
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="#666666"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="TxtStockActual" 
                                       Text="0"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBlue}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="unidades disponibles" 
                                       FontSize="11"
                                       Foreground="#999999"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Stock Mínimo -->
                    <Grid Grid.Row="2" Margin="5,0,5,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock Text="Stock Mínimo:" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="(Alerta cuando el stock baje de este valor)" 
                                       FontSize="10"
                                       Foreground="#666666"
                                       TextWrapping="Wrap"
                                       MaxWidth="200"/>
                        </StackPanel>

                        <TextBox x:Name="TxtStockMinimo" 
                                 Grid.Column="1"
                                 Width="150"
                                 Height="30"
                                 HorizontalAlignment="Left"
                                 VerticalContentAlignment="Center"
                                 Padding="5"
                                 Text="0"
                                 BorderBrush="#E67E22"
                                 BorderThickness="2"
                                 TextChanged="TxtStock_TextChanged"/>
                    </Grid>

                    <!-- Stock Máximo -->
                    <Grid Grid.Row="3" Margin="5,0,5,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock Text="Stock Máximo:" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="(Alerta cuando el stock supere este valor)" 
                                       FontSize="10"
                                       Foreground="#666666"
                                       TextWrapping="Wrap"
                                       MaxWidth="200"/>
                        </StackPanel>

                        <TextBox x:Name="TxtStockMaximo" 
                                 Grid.Column="1"
                                 Width="150"
                                 Height="30"
                                 HorizontalAlignment="Left"
                                 VerticalContentAlignment="Center"
                                 Padding="5"
                                 Text="0"
                                 BorderBrush="#27AE60"
                                 BorderThickness="2"
                                 TextChanged="TxtStock_TextChanged"/>
                    </Grid>

                    <!-- Indicador visual del estado del stock -->
                    <Border Grid.Row="4" 
                            x:Name="BorderEstadoStock"
                            Background="#F8F9FA"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="15"
                            Margin="5"
                            VerticalAlignment="Top">
                        <StackPanel>
                            <TextBlock Text="Estado del Stock" 
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"/>
                            <TextBlock x:Name="TxtEstadoStock" 
                                       Text="Configura los valores de stock mínimo y máximo para recibir alertas."
                                       TextWrapping="Wrap"
                                       Foreground="#666666"
                                       FontSize="11"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab Vencimiento -->
            <TabItem Header="Vencimiento" Style="{StaticResource TabStyle}">
                <Grid Margin="15" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Título con ícono de ayuda -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,5,5,15">
                        <TextBlock Text="Control de Vencimiento:" 
                       Style="{StaticResource LabelStyle}"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="{StaticResource DarkBlue}"/>
                        <Button x:Name="BtnAyudaVencimiento"
                    Content="❓"
                    Width="24"
                    Height="24"
                    Margin="10,0,0,0"
                    Background="{StaticResource AccentBlue}"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="BtnAyudaVencimiento_Click"
                    ToolTip="Información sobre control de vencimiento"/>
                    </StackPanel>

                    <!-- CheckBox: Lleva Vencimiento -->
                    <CheckBox x:Name="ChkLlevaVencimiento"
                  Grid.Row="1"
                  Content="Este producto lleva control de vencimiento"
                  FontWeight="Bold"
                  Margin="5,0,5,20"
                  Checked="ChkLlevaVencimiento_CheckedChanged"
                  Unchecked="ChkLlevaVencimiento_CheckedChanged"/>

                    <!-- Fecha de Vencimiento -->
                    <Grid Grid.Row="2" Margin="5,0,5,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock Text="Fecha de Vencimiento:" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                            <TextBlock Text="(Fecha en que vence el producto)" 
                           FontSize="10"
                           Foreground="#666666"
                           TextWrapping="Wrap"
                           MaxWidth="200"/>
                        </StackPanel>

                        <DatePicker x:Name="DpFechaVencimiento" 
                        Grid.Column="1"
                        Width="200"
                        Height="30"
                        HorizontalAlignment="Left"
                        VerticalContentAlignment="Center"
                        IsEnabled="False"
                        SelectedDateChanged="FechaVencimiento_Changed"/>
                    </Grid>

                    <!-- Alerta de Vencimiento -->
                    <Grid Grid.Row="3" Margin="5,0,5,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock Text="Alerta Vencimiento:" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                            <TextBlock Text="(Días antes del vencimiento para recibir alerta)" 
                           FontSize="10"
                           Foreground="#666666"
                           TextWrapping="Wrap"
                           MaxWidth="200"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox x:Name="TxtAlertaVencimiento" 
                         Width="100"
                         Height="30"
                         VerticalContentAlignment="Center"
                         Padding="5"
                         Text="0"
                         IsEnabled="False"
                         BorderBrush="#E67E22"
                         BorderThickness="2"
                         TextChanged="AlertaVencimiento_TextChanged"/>
                            <TextBlock Text="días antes" 
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Foreground="#666666"/>
                        </StackPanel>
                    </Grid>

                    <!-- Indicador visual del estado del vencimiento -->
                    <Border Grid.Row="4" 
                x:Name="BorderEstadoVencimiento"
                Background="#F8F9FA"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="5"
                VerticalAlignment="Top">
                        <StackPanel>
                            <TextBlock Text="Estado del Vencimiento" 
                           FontSize="12"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                            <TextBlock x:Name="TxtEstadoVencimiento" 
                           Text="Active el control de vencimiento para recibir alertas sobre productos próximos a vencer."
                           TextWrapping="Wrap"
                           Foreground="#666666"
                           FontSize="11"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab Etiqueta -->
            <TabItem Header="Etiqueta" Style="{StaticResource TabStyle}">
                <Grid Margin="15" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                   Text="Vista Previa de Etiqueta:" 
                   Style="{StaticResource LabelStyle}"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="{StaticResource DarkBlue}"
                   Margin="5,5,5,15"/>

                    <!-- Campo Descripción Breve -->
                    <Grid Grid.Row="1" Margin="5,0,5,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Descripción breve:" 
                       Grid.Column="0"
                       Style="{StaticResource LabelStyle}"
                       VerticalAlignment="Center"
                       Margin="5,0,15,0"/>
                        <TextBox x:Name="TxtDescripcionBreve" 
                     Grid.Column="1"
                     Height="24"
                     MaxLength="50"
                     VerticalContentAlignment="Center"
                     Padding="5,3"
                     BorderBrush="{StaticResource PrimaryBlue}"
                     BorderThickness="1"
                     TextChanged="TxtDescripcionBreve_TextChanged"
                     ToolTip="Texto corto para la etiqueta (máximo 50 caracteres). Si está vacío, se usa el nombre del producto."/>
                        <TextBlock Grid.Column="1"
                       Text="{Binding Text.Length, ElementName=TxtDescripcionBreve, StringFormat={}{0}/50}"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"
                       FontSize="9"
                       Foreground="#999999"
                       IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Vista previa de la etiqueta -->
                    <Border Grid.Row="2"
                BorderBrush="{StaticResource PrimaryBlue}"
                BorderThickness="2"
                Background="White"
                Width="220"
                Height="160"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                CornerRadius="5"
                Padding="10">
                        <Border.Effect>
                            <DropShadowEffect Color="#3498DB" 
                                  BlurRadius="8" 
                                  ShadowDepth="2" 
                                  Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Nombre del producto en la parte superior -->
                            <TextBlock x:Name="TxtPreviewName"
                           Grid.Row="0"
                           Text="PRODUCTO"
                           FontWeight="Bold"
                           FontSize="12"
                           TextAlignment="Center"
                           Foreground="{StaticResource DarkBlue}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,5"/>

                            <!-- Precio grande en el centro -->
                            <TextBlock x:Name="TxtPreviewPrice"
                           Grid.Row="1"
                           Text="$ 0,00"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="#CC00CC"
                           TextAlignment="Center"
                           VerticalAlignment="Center"/>

                            <!-- Información adicional en la parte inferior -->
                            <Grid Grid.Row="2" Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="TxtPreviewCode"
                               Grid.Column="0"
                               Text=""
                               FontSize="8"
                               TextAlignment="Left"
                               Foreground="#666666"
                               VerticalAlignment="Center"/>

                                <Border Grid.Column="1"
                            Background="{StaticResource DarkBlue}"
                            Padding="6,2"
                            CornerRadius="3"
                            Margin="3,0">
                                    <TextBlock x:Name="TxtPreviewCost"
                                   Text="$0,00/UN"
                                   FontSize="9"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   Foreground="White"/>
                                </Border>

                                <TextBlock x:Name="TxtPreviewDate"
                               Grid.Column="2"
                               Text=""
                               FontSize="8"
                               TextAlignment="Right"
                               Foreground="#666666"
                               VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Botones inferiores -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,0,0,5">
            <Button x:Name="BtnGuardar"
                    Content="Guardar" 
                    Style="{StaticResource ButtonStyle}"
                    Click="BtnGuardar_Click"
                    IsDefault="True"/>
            <Button x:Name="BtnCancelar"
                    Content="Cancelar" 
                    Style="{StaticResource CancelButtonStyle}"
                    Click="BtnCancelar_Click"
                    IsCancel="True"
                    Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>