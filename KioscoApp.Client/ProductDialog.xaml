<Window x:Class="KioscoApp.Client.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo artículo" Height="550" Width="750" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <!-- Colores - Mismo azul que MainWindow -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#FF3498DB"/>
        <SolidColorBrush x:Key="LightBlue" Color="#FFEBF5FB"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#FF2C3E50"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#FF5DADE2"/>

        <!-- Estilos -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="TabStyle" TargetType="TabItem">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightBlue}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,5"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barra superior azul con título -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkBlue}"
                Padding="10,8"
                Margin="-15,-15,-15,0">
            <TextBlock Text="DATOS DEL ARTÍCULO" 
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="13"/>
        </Border>

        <!-- Sección superior: Código y Descripción -->
        <Grid Grid.Row="1" Margin="0,15,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Código -->
            <TextBlock Text="Código: *" 
                       Grid.Row="0" Grid.Column="0"
                       Style="{StaticResource LabelStyle}"
                       Foreground="{StaticResource DarkBlue}"/>
            <TextBox x:Name="TxtCode" 
                     Grid.Row="0" Grid.Column="1"
                     Style="{StaticResource TextBoxStyle}"
                     Margin="5,5,5,5"/>

            <!-- Descripción -->
            <TextBlock Text="Descripción: *" 
                       Grid.Row="1" Grid.Column="0"
                       Style="{StaticResource LabelStyle}"
                       Foreground="{StaticResource DarkBlue}"
                       Margin="5,8,5,5"/>
            <TextBox x:Name="TxtDescription" 
                     Grid.Row="1" Grid.Column="1"
                     Style="{StaticResource TextBoxStyle}"
                     Margin="5,8,5,5"/>
        </Grid>

        <!-- TabControl con las pestañas -->
        <TabControl Grid.Row="2" 
                    Margin="0,15,0,15"
                    x:Name="MainTabControl"
                    BorderBrush="{StaticResource PrimaryBlue}"
                    BorderThickness="1">

            <!-- Tab General -->
            <TabItem Header="General" Style="{StaticResource TabStyle}">
                <Grid Margin="15" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Observaciones -->
                    <TextBlock Text="Observaciones:" 
                               Grid.Row="0" Grid.Column="0"
                               Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtObservaciones" 
                             Grid.Row="0" Grid.Column="1"
                             Style="{StaticResource TextBoxStyle}"
                             Margin="5"/>

                    <!-- Unidad de Venta -->
                    <TextBlock Text="Unidad Venta:" 
                               Grid.Row="1" Grid.Column="0"
                               Style="{StaticResource LabelStyle}"
                               Margin="5,10,5,5"/>
                    <ComboBox x:Name="CmbUnidadVenta" 
                              Grid.Row="1" Grid.Column="1"
                              Width="150"
                              Height="24"
                              Margin="5,10,5,5"
                              HorizontalAlignment="Left"
                              BorderBrush="{StaticResource PrimaryBlue}">
                        <ComboBoxItem Content="Unidad (UN)" IsSelected="True"/>
                        <ComboBoxItem Content="Kilogramo (KG)"/>
                    </ComboBox>

                    <!-- Precio de Venta -->
                    <TextBlock Text="Precio de Venta:" 
                               Grid.Row="2" Grid.Column="0"
                               Style="{StaticResource LabelStyle}"
                               Margin="5,10,5,5"/>
                    <StackPanel Grid.Row="2" Grid.Column="1" 
                                Orientation="Horizontal"
                                Margin="5,10,5,5">
                        <TextBlock Text="$" 
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Margin="0,0,5,0"/>
                        <TextBox x:Name="TxtPrecioVenta" 
                                 Width="150"
                                 Style="{StaticResource TextBoxStyle}"
                                 Text="0.00"/>
                    </StackPanel>

                    <!-- Precio de Costo -->
                    <TextBlock Text="Precio de Costo:" 
                               Grid.Row="3" Grid.Column="0"
                               Style="{StaticResource LabelStyle}"
                               Margin="5,10,5,5"/>
                    <StackPanel Grid.Row="3" Grid.Column="1" 
                                Orientation="Horizontal"
                                Margin="5,10,5,5">
                        <TextBlock Text="$" 
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Margin="0,0,5,0"/>
                        <TextBox x:Name="TxtPrecioCosto" 
                                 Width="150"
                                 Style="{StaticResource TextBoxStyle}"
                                 Text="0.00"/>
                    </StackPanel>

                    <!-- Rubro -->
                    <TextBlock Text="Rubro:" 
                               Grid.Row="4" Grid.Column="0"
                               Style="{StaticResource LabelStyle}"
                               Margin="5,10,5,5"/>
                    <ComboBox x:Name="CmbRubro" 
                              Grid.Row="4" Grid.Column="1"
                              Margin="5,10,5,5"
                              Height="24"
                              BorderBrush="{StaticResource PrimaryBlue}"
                              IsEditable="True">
                        <ComboBoxItem Content="Bebidas"/>
                        <ComboBoxItem Content="Golosinas"/>
                        <ComboBoxItem Content="Cigarrillos"/>
                        <ComboBoxItem Content="Snacks"/>
                        <ComboBoxItem Content="Lácteos"/>
                        <ComboBoxItem Content="Almacén"/>
                        <ComboBoxItem Content="Limpieza"/>
                        <ComboBoxItem Content="Perfumería"/>
                        <ComboBoxItem Content="Otros"/>
                    </ComboBox>
                </Grid>
            </TabItem>

            <!-- Tab Foto -->
            <TabItem Header="Foto" Style="{StaticResource TabStyle}">
                <Grid Margin="15" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Imagen del Producto:" 
                               Style="{StaticResource LabelStyle}"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource DarkBlue}"
                               Margin="5,5,5,15"/>

                    <!-- Imagen del producto -->
                    <Border Grid.Row="1"
                            x:Name="BorderImagen"
                            BorderBrush="{StaticResource PrimaryBlue}"
                            BorderThickness="2"
                            Background="#F8F9FA"
                            CornerRadius="5"
                            Padding="10"
                            Width="400"
                            Height="300"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <Image x:Name="ImgProducto" 
                               Stretch="Uniform"/>
                    </Border>

                    <!-- Placeholder cuando no hay imagen -->
                    <Grid Grid.Row="1"
                          x:Name="PlaceholderImagen"
                          Width="400"
                          Height="300"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                        <Rectangle Stroke="{StaticResource PrimaryBlue}"
                                   StrokeThickness="2"
                                   StrokeDashArray="4,2"
                                   Fill="#F8F9FA"
                                   RadiusX="5"
                                   RadiusY="5"/>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="📷" 
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource AccentBlue}"/>
                            <TextBlock Text="Sin imagen" 
                                       FontSize="16"
                                       Foreground="#999999"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Botones -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0">
                        <Button x:Name="BtnCargarImagen"
                                Content="📁 Cargar Imagen" 
                                Width="150"
                                Height="35"
                                Click="BtnCargarImagen_Click"
                                Style="{StaticResource ButtonStyle}"/>
                        <Button x:Name="BtnEliminarImagen"
                                Content="🗑️ Eliminar Imagen" 
                                Width="150"
                                Height="35"
                                Margin="10,0,0,0"
                                Click="BtnEliminarImagen_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                                    <Setter Property="Background" Value="#E74C3C"/>
                                    <Setter Property="BorderBrush" Value="#E74C3C"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C0392B"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab Proveedores -->
            <TabItem Header="Proveedores" Style="{StaticResource TabStyle}">
                <Grid Margin="15" Background="White">
                    <TextBlock Text="Contenido de Proveedores (Próximamente)" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource AccentBlue}"
                               FontStyle="Italic"
                               FontSize="14"/>
                </Grid>
            </TabItem>

            <!-- Tab Stock -->
            <TabItem Header="Stock" Style="{StaticResource TabStyle}">
                <Grid Margin="15" Background="White">
                    <TextBlock Text="Contenido de Stock (Próximamente)" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource AccentBlue}"
                               FontStyle="Italic"
                               FontSize="14"/>
                </Grid>
            </TabItem>

            <!-- Tab Etiqueta -->
            <TabItem Header="Etiqueta" Style="{StaticResource TabStyle}">
                <Grid Margin="15" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Vista Previa de Etiqueta:" 
                               Style="{StaticResource LabelStyle}"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource DarkBlue}"
                               Margin="5,5,5,15"/>

                    <Border Grid.Row="1"
                            BorderBrush="{StaticResource PrimaryBlue}"
                            BorderThickness="2"
                            Background="White"
                            Width="250"
                            Height="180"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            CornerRadius="5">
                        <Border.Effect>
                            <DropShadowEffect Color="#3498DB" 
                                              BlurRadius="8" 
                                              ShadowDepth="2" 
                                              Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" 
                                    Background="{StaticResource LightBlue}"
                                    Padding="5"
                                    CornerRadius="4,4,0,0">
                                <TextBlock x:Name="TxtPreviewName"
                                           Text="PRODUCTO"
                                           FontWeight="Bold"
                                           TextAlignment="Center"
                                           Foreground="{StaticResource DarkBlue}"/>
                            </Border>

                            <TextBlock x:Name="TxtPreviewQuantity"
                                       Grid.Row="1"
                                       Text=""
                                       TextAlignment="Center"
                                       FontSize="11"
                                       Margin="5,5,5,5"
                                       Foreground="#555555"/>

                            <TextBlock x:Name="TxtPreviewPrice"
                                       Grid.Row="2"
                                       Text="$ 0,00"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="#CC00CC"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <Border Grid.Row="3" 
                                    Background="{StaticResource LightBlue}"
                                    Padding="5"
                                    CornerRadius="0,0,4,4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock x:Name="TxtPreviewCode"
                                               Grid.Column="0"
                                               Text=""
                                               FontSize="10"
                                               TextAlignment="Left"
                                               Foreground="{StaticResource DarkBlue}"/>

                                    <TextBlock x:Name="TxtPreviewCost"
                                               Grid.Column="1"
                                               Text="$0,00/UN"
                                               FontSize="10"
                                               TextAlignment="Center"
                                               Foreground="{StaticResource DarkBlue}"/>

                                    <TextBlock x:Name="TxtPreviewDate"
                                               Grid.Column="2"
                                               Text=""
                                               FontSize="10"
                                               TextAlignment="Right"
                                               Foreground="{StaticResource DarkBlue}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Botones inferiores -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,0,0,5">
            <Button x:Name="BtnGuardar"
                    Content="Guardar" 
                    Style="{StaticResource ButtonStyle}"
                    Click="BtnGuardar_Click"
                    IsDefault="True"/>
            <Button x:Name="BtnCancelar"
                    Content="Cancel" 
                    Style="{StaticResource CancelButtonStyle}"
                    Click="BtnCancelar_Click"
                    IsCancel="True"
                    Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>