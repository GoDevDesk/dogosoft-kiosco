<Window x:Class="KioscoApp.Client.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Producto" Height="350" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Campos de producto -->
        <TextBlock Text="Código:" Grid.Row="0"/>
        <TextBox x:Name="TxtCode" Grid.Row="0" Margin="100,0,0,0"/>

        <TextBlock Text="Nombre:" Grid.Row="1" Margin="0,10,0,0"/>
        <TextBox x:Name="TxtName" Grid.Row="1" Margin="100,10,0,0"/>

        <TextBlock Text="Precio:" Grid.Row="2" Margin="0,10,0,0"/>
        <TextBox x:Name="TxtPrice" Grid.Row="2" Margin="100,10,0,0"/>

        <TextBlock Text="Stock:" Grid.Row="3" Margin="0,10,0,0"/>
        <TextBox x:Name="TxtStock" Grid.Row="3" Margin="100,10,0,0"/>

        <TextBlock Text="Categoría:" Grid.Row="4" Margin="0,10,0,0"/>
        <TextBox x:Name="TxtCategory" Grid.Row="4" Margin="100,10,0,0"/>

        <!-- Imagen -->
        <TextBlock Text="Foto:" Grid.Row="5" Margin="0,10,0,0"/>
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="100,10,0,0">
            <Image x:Name="ImgProduct" Width="100" Height="100" Stretch="Uniform" />
            <Button Content="Cargar Foto" Click="BtnCargarFoto_Click" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Aceptar" Width="80" Click="BtnAceptar_Click"/>
            <Button Content="Cancelar" Width="80" Click="BtnCancelar_Click" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
