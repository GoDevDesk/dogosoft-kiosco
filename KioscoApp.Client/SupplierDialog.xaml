<Window x:Class="KioscoApp.Client.SupplierDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Proveedor" Height="400" Width="500" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#FF3498DB"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#FF2C3E50"/>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Width" Value="120"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,5"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkBlue}"
                Padding="10,8"
                Margin="-15,-15,-15,0">
            <TextBlock Text="DATOS DEL PROVEEDOR" 
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="13"/>
        </Border>

        <!-- Formulario -->
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Nombre -->
            <TextBlock Text="Nombre: *" 
                       Grid.Row="0" Grid.Column="0"
                       Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="TxtNombre" 
                     Grid.Row="0" Grid.Column="1"
                     Style="{StaticResource TextBoxStyle}"
                     Margin="0,5"/>

            <!-- Persona de contacto -->
            <TextBlock Text="Contacto:" 
                       Grid.Row="1" Grid.Column="0"
                       Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="TxtContacto" 
                     Grid.Row="1" Grid.Column="1"
                     Style="{StaticResource TextBoxStyle}"
                     Margin="0,5"/>

            <!-- Teléfono -->
            <TextBlock Text="Teléfono:" 
                       Grid.Row="2" Grid.Column="0"
                       Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="TxtTelefono" 
                     Grid.Row="2" Grid.Column="1"
                     Style="{StaticResource TextBoxStyle}"
                     Margin="0,5"/>

            <!-- Email -->
            <TextBlock Text="Email:" 
                       Grid.Row="3" Grid.Column="0"
                       Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="TxtEmail" 
                     Grid.Row="3" Grid.Column="1"
                     Style="{StaticResource TextBoxStyle}"
                     Margin="0,5"/>

            <!-- Dirección -->
            <TextBlock Text="Dirección:" 
                       Grid.Row="4" Grid.Column="0"
                       Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="TxtDireccion" 
                     Grid.Row="4" Grid.Column="1"
                     Style="{StaticResource TextBoxStyle}"
                     Margin="0,5"/>
        </Grid>

        <!-- Botones -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="BtnGuardar"
                    Content="Guardar" 
                    Style="{StaticResource ButtonStyle}"
                    Click="BtnGuardar_Click"
                    IsDefault="True"/>
            <Button x:Name="BtnCancelar"
                    Content="Cancelar" 
                    Width="80"
                    Height="30"
                    Click="BtnCancelar_Click"
                    IsCancel="True"
                    Margin="10,0,0,0"
                    Background="#E0E0E0"
                    Foreground="#333333"/>
        </StackPanel>
    </Grid>
</Window>