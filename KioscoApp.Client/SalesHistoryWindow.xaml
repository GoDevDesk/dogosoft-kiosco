<Window x:Class="KioscoApp.Client.SalesHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historial de Ventas" Height="550" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <WrapPanel Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Center">
            <TextBlock Text="Filtrar por fecha:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker x:Name="DpDesde"/>
            <TextBlock Text="a" VerticalAlignment="Center" Margin="5,0"/>
            <DatePicker x:Name="DpHasta" Margin="5,0"/>

            <TextBlock Text="Vendedor:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox x:Name="CbUsuario" Width="150" Margin="5,0"/>

            <TextBlock Text="Tipo:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox x:Name="CbTipo" Width="120" Margin="5,0"/>

            <Button Content="Filtrar" Click="BtnFiltrar_Click" Margin="10,0"/>
            <Button Content="Exportar CSV" Click="BtnExportar_Click" Margin="10,0"/>
        </WrapPanel>

        <!-- Grilla de ventas -->
        <DataGrid x:Name="GridSales" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  MouseDoubleClick="GridSales_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Date}" Width="150"/>
                <DataGridTextColumn Header="Usuario" Binding="{Binding User}" Width="150"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding SaleType}" Width="100"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
