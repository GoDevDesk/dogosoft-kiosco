<Window x:Class="KioscoApp.Client.PriceUpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Actualización Masiva de Precios" Height="512" Width="766" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#FF3498DB"/>
        <SolidColorBrush x:Key="LightBlue" Color="#FFEBF5FB"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#FF2C3E50"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#FF5DADE2"/>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkBlue}"
                Padding="15,10"
                Margin="-20,-20,-20,0"
                CornerRadius="0">
            <TextBlock Text="ACTUALIZACIÓN MASIVA DE PRECIOS" 
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="16"/>
        </Border>

        <!-- Descripción -->
        <TextBlock Grid.Row="1"
                   Text="Actualice los precios de costo de productos según lista y rubro aplicando un porcentaje de variación."
                   TextWrapping="Wrap"
                   Foreground="#666666"
                   Margin="0,20,0,20"
                   FontSize="11"/>

        <!-- Lista de Precios -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Lista de Precios:" 
                       Grid.Column="0"
                       Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="CmbLista" 
                      Grid.Column="1"
                      Style="{StaticResource ComboBoxStyle}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"/>
        </Grid>

        <!-- Rubro -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Rubro:" 
                       Grid.Column="0"
                       Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="CmbRubro" 
                      Grid.Column="1"
                      Style="{StaticResource ComboBoxStyle}">
                <ComboBoxItem Content="Todos los rubros" Tag="ALL" IsSelected="True"/>
            </ComboBox>
        </Grid>

        <!-- Variación Precio -->
        <Grid Grid.Row="4" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Variación precio de costo:" 
                           FontWeight="Bold"
                           Margin="5,0,5,5"/>
                <TextBlock Text="(Porcentaje de aumento o disminución)" 
                           FontSize="9"
                           Foreground="#666666"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBox x:Name="TxtVariacion" 
                         Width="120"
                         Style="{StaticResource TextBoxStyle}"
                         Text="0"
                         HorizontalContentAlignment="Right"/>
                <TextBlock Text="%" 
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="5,0,0,0"/>
                <TextBlock Text="(use valores negativos para disminuir)" 
                           VerticalAlignment="Center"
                           FontSize="9"
                           Foreground="#999999"
                           Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Información -->
        <Border Grid.Row="5" 
                Background="{StaticResource LightBlue}"
                BorderBrush="{StaticResource PrimaryBlue}"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,10,0,20">
            <StackPanel>
                <TextBlock Text="ℹ️ Información importante:" 
                           FontWeight="Bold"
                           Foreground="{StaticResource DarkBlue}"
                           Margin="0,0,0,10"/>
                <TextBlock TextWrapping="Wrap" Foreground="#333333" FontSize="11">
                    <Run Text="• Esta operación actualizará los precios de costo de todos los productos que coincidan con los filtros seleccionados."/>
                    <LineBreak/>
                    <Run Text="• El porcentaje se aplicará sobre el precio de costo actual."/>
                    <LineBreak/>
                    <Run Text="• Ejemplo: un producto con costo $100 y variación de 10% quedará en $110."/>
                    <LineBreak/>
                    <Run Text="• Use valores negativos para reducir precios (ej: -5 para reducir 5%)."/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Botones -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,0,0,0">
            <Button x:Name="BtnAplicar"
                    Content="Aplicar Cambios" 
                    Style="{StaticResource ButtonStyle}"
                    Click="BtnAplicar_Click"/>
            <Button x:Name="BtnCancelar"
                    Content="Cancelar" 
                    Style="{StaticResource CancelButtonStyle}"
                    Click="BtnCancelar_Click"
                    Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>