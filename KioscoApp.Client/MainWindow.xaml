<Window x:Class="KioscoApp.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mi Kiosco - Sistema Integrado" 
        Height="800" Width="1072"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal">
    <Window.Resources>
        <!-- AQUÍ AGREGAS EL ESTILO -->
        <Style x:Key="SubMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Padding" Value="10,5"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- MENU SUPERIOR -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="5" Margin="0,0,0,26">
            <DockPanel LastChildFill="True">
                <!-- Menú de la izquierda -->
                <Menu DockPanel.Dock="Left" Background="Transparent" Foreground="White" 
      FontSize="13" FontWeight="Bold">
                    <MenuItem Header="📦 Artículos">
                        <MenuItem Header="📋 Ver Artículos" Click="BtnVerArticulos_Click" Style="{StaticResource SubMenuItemStyle}"/>
                        <MenuItem Header="➕ Nuevo Artículo" Click="BtnNuevoArticulo_Click" Style="{StaticResource SubMenuItemStyle}"/>
                        <MenuItem Header="✏️ Editar Artículo" Click="BtnEditarArticulo_Click" Style="{StaticResource SubMenuItemStyle}"/>
                        <MenuItem Header="📈 Actualización masiva de precios" Click="MenuActualizacionMasivaPrecios_Click" Style="{StaticResource SubMenuItemStyle}"/>
                        <Separator/>
                        <MenuItem Header="💰 Precios" Style="{StaticResource SubMenuItemStyle}">
                            <MenuItem Header="📋 Ver Listas de Precios" Click="BtnVerListasPrecios_Click" Style="{StaticResource SubMenuItemStyle}"/>
                            <MenuItem Header="➕ Nueva Lista de Precios" Click="BtnNuevaListaPrecios_Click" Style="{StaticResource SubMenuItemStyle}"/>
                        </MenuItem>
                    </MenuItem>

                    <MenuItem Header="🏭 Proveedores">
                        <MenuItem Header="📋 Ver Proveedores" Click="BtnVerProveedores_Click" Style="{StaticResource SubMenuItemStyle}"/>
                        <MenuItem Header="➕ Nuevo Proveedor" Click="BtnNuevoProveedor_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    </MenuItem>
                    <MenuItem Header="📋 Inventario">
                        <MenuItem Header="📊 Ver Movimientos de Stock" Click="BtnMovimientosStock_Click" Style="{StaticResource SubMenuItemStyle}"/>
                        <MenuItem Header="📦 Cargar Compra" Click="BtnCargarCompra_Click" Style="{StaticResource SubMenuItemStyle}"/>
                        <MenuItem Header="🔧 Ajuste de Inventario" Click="BtnAjusteInventario_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    </MenuItem>
                    <MenuItem Header="📊 Historial" Click="BtnHistorialVentas_Click"/>
                    <MenuItem Header="📈 Reportes" Click="BtnReportes_Click" IsEnabled="False"/>
                    <MenuItem Header="👥 Clientes" Click="BtnClientes_Click" IsEnabled="False"/>
                    <MenuItem Header="⚙️ Configuración" Click="BtnConfiguracion_Click" IsEnabled="False"/>
                </Menu>

                <!-- Licencia a la derecha -->
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Width="342">
                    <TextBlock x:Name="TxtLicense" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBlock x:Name="TxtExpires" Foreground="#BDC3C7" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button Content="🔑 Licencia" 
                    Background="Transparent" Foreground="White" BorderThickness="0" 
                    Padding="10,0" FontSize="13" FontWeight="Bold" Cursor="Hand"
                    Click="BtnIngresarClave_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>



        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="367*"/>
                <ColumnDefinition Width="133*"/>
            </Grid.ColumnDefinitions>

            <!-- LADO IZQUIERDO - POS INTEGRADO -->
            <Border Grid.Column="0" Background="White" BorderBrush="#BDC3C7" BorderThickness="0,0,1,0" Margin="0,-20,0,0">
                <Grid Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="657*"/>
                        <ColumnDefinition Width="46*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1.2*"/>
                    </Grid.RowDefinitions>

                    <!-- Buscador -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15" Grid.ColumnSpan="2">
                        <TextBlock Text="PUNTO DE VENTA" FontSize="18" FontWeight="Bold" 
               Foreground="#2C3E50" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Buscador -->
                            <TextBox Grid.Column="0" 
                 x:Name="TxtCodigo" 
                 Height="35" 
                 FontSize="14"
                 ToolTip="Código o nombre de producto"
                 KeyDown="TxtCodigo_KeyDown"
                 VerticalContentAlignment="Center"
                 Margin="0,0,10,0"/>

                            <Button Grid.Column="1" 
                Content="Agregar" 
                Click="BtnAgregar_Click" 
                Height="35" 
                FontSize="12" 
                FontWeight="Bold"
                Margin="0,0,10,0"/>

                            <Button Grid.Column="2" 
                Content="🔍 Buscar" 
                Click="BtnBuscarAvanzado_Click" 
                Height="35" 
                FontSize="12" 
                FontWeight="Bold"
                Background="#3498DB"
                Foreground="White"
                Margin="0,0,15,0"
                ToolTip="Búsqueda avanzada de productos (F4)"/>

                            <!-- Lista de Precios -->
                            <TextBlock Grid.Column="3" 
                   Text="Lista:" 
                   VerticalAlignment="Center" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50"
                   Margin="0,0,8,0"/>

                            <ComboBox Grid.Column="3" 
                  x:Name="CmbListaPrecios"
                  Height="35"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"
                  SelectionChanged="CmbListaPrecios_SelectionChanged"
                  BorderBrush="#3498DB"
                  BorderThickness="2"
                  VerticalContentAlignment="Center" Grid.ColumnSpan="2" Margin="37,0,27,0"/>
                        </Grid>

                        <TextBlock x:Name="TxtMensaje" Foreground="Red" FontWeight="Bold" 
               Margin="0,10,0,0" FontSize="12"/>
                    </StackPanel>

                    <!-- DataGrid -->
                    <DataGrid x:Name="GridVenta" AutoGenerateColumns="False"
                              CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single"
                              SelectionUnit="FullRow" Margin="0,78,0,15"
                              SelectionChanged="GridVenta_SelectionChanged" Grid.RowSpan="2" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Producto" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad}" Width="60"/>
                            <DataGridTextColumn Header="Precio" Binding="{Binding Precio, StringFormat=C}" Width="80"/>
                            <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="90"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding StockDisponible}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Botones de acción -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,206,0,244" Grid.ColumnSpan="2" Grid.RowSpan="3">
                        <Button Content="Eliminar Ítem" Click="BtnEliminar_Click" 
                          Width="110" Height="35" Margin="0,0,10,0"/>
                        <Button Content="Modificar Cantidad" Click="BtnModificarCantidad_Click" 
                             Width="140" Height="35" Margin="0,0,10,0"/>
                        <Button Content="💰 Descuento" Click="BtnDescuento_Click" 
                              Width="110" Height="35" Margin="0,0,10,0"
                           Background="#E67E22" Foreground="White" FontWeight="Bold"/>
                        <Button Content="📈 Recargo" Click="BtnRecargo_Click" 
                             Width="100" Height="35" Margin="0,0,10,0"
                             Background="#27AE60" Foreground="White" FontWeight="Bold"/>
                        <Button Content="Cambiar Precio" Click="BtnCambiarPrecio_Click" 
                            Width="120" Height="35"/>
                    </StackPanel>

                    <!-- DATOS DEL COMPROBANTE Y CLIENTE -->
                    <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,50,0,0" Grid.RowSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <!-- DATOS DEL COMPROBANTE -->
                        <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#3498DB" BorderThickness="2" 
                                Margin="0,-11,0,0" CornerRadius="5" Height="128" VerticalAlignment="Top" Grid.RowSpan="2">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="DATOS DEL COMPROBANTE" FontSize="14" FontWeight="Bold" 
                                           Foreground="#2C3E50" Margin="0,0,0,8"/>

                                <Grid Grid.Row="1" Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Fecha:" VerticalAlignment="Center" 
                                               Margin="0,0,8,0" FontWeight="Bold" FontSize="12"/>
                                    <DatePicker x:Name="DpFecha" Grid.Column="1" 
                                                Margin="0,0,10,0" VerticalAlignment="Center"
                                                BorderBrush="#3498DB" BorderThickness="1" Height="25"/>

                                    <TextBlock Grid.Column="2" Text="Tipo:" VerticalAlignment="Center" 
                                               Margin="0,0,8,0" FontWeight="Bold" FontSize="12"/>
                                    <ComboBox x:Name="CmbTipoTicket" Grid.Column="3" 
                                              Margin="0,0,10,0" VerticalAlignment="Center"
                                              BorderBrush="#3498DB" BorderThickness="1" Height="25">
                                        <ComboBoxItem Content="Ticket" IsSelected="True"/>
                                        <ComboBoxItem Content="Factura A"/>
                                        <ComboBoxItem Content="Factura B"/>
                                        <ComboBoxItem Content="Factura C"/>
                                    </ComboBox>

                                    <TextBlock Grid.Column="4" Text="Nro:" VerticalAlignment="Center" 
                                               Margin="0,0,8,0" FontWeight="Bold" FontSize="12"/>
                                    <ComboBox x:Name="CmbNumero" Grid.Column="5" 
                                              VerticalAlignment="Center" IsEditable="True"
                                              BorderBrush="#3498DB" BorderThickness="1" Height="25">
                                        <ComboBoxItem Content="0001-00000001"/>
                                        <ComboBoxItem Content="0001-00000002"/>
                                        <ComboBoxItem Content="0001-00000003"/>
                                    </ComboBox>
                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Observaciones:" VerticalAlignment="Top" 
                                               Margin="0,5,8,0" FontWeight="Bold" FontSize="12"/>
                                    <TextBox x:Name="TxtObservaciones" Grid.Column="1" 
                                             MinHeight="40" MaxHeight="60" TextWrapping="Wrap" AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto"
                                             BorderBrush="#3498DB" BorderThickness="1"
                                             VerticalContentAlignment="Top"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- DATOS DEL CLIENTE -->
                        <Border Background="#F8F9FA" BorderBrush="#3498DB" BorderThickness="2" 
                                Margin="0,131,0,10" CornerRadius="5" Grid.RowSpan="2">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="DATOS DEL CLIENTE" FontSize="14" FontWeight="Bold" 
                                               Foreground="#2C3E50"/>
                                    <Button x:Name="BtnCambiarCliente" Content="Cambiar Cliente" 
                                            Click="BtnCambiarCliente_Click"
                                            Height="22" Width="110" FontSize="10" Margin="15,0,0,0"
                                            Background="#3498DB" Foreground="White" BorderThickness="0"/>
                                </StackPanel>

                                <Grid Grid.Row="1" Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Sr/a:" VerticalAlignment="Center" 
                                               Margin="0,0,8,0" FontWeight="Bold" FontSize="12"/>
                                    <TextBox x:Name="TxtCliente" Grid.Column="1" 
                                             Margin="0,0,10,0" VerticalAlignment="Center" Text="Consumidor Final"
                                             BorderBrush="#3498DB" BorderThickness="1" Height="25"/>

                                    <TextBlock Grid.Column="2" Text="Teléfono:" VerticalAlignment="Center" 
                                               Margin="0,0,8,0" FontWeight="Bold" FontSize="12"/>
                                    <TextBox x:Name="TxtTelefono" Grid.Column="3" 
                                             VerticalAlignment="Center"
                                             BorderBrush="#3498DB" BorderThickness="1" Height="25"/>
                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Domicilio:" VerticalAlignment="Center" 
                                               Margin="0,0,8,0" FontWeight="Bold" FontSize="12"/>
                                    <TextBox x:Name="TxtDomicilio" Grid.Column="1" 
                                             Margin="0,0,10,0" VerticalAlignment="Center"
                                             BorderBrush="#3498DB" BorderThickness="1" Height="25"/>

                                    <TextBlock Grid.Column="2" Text="Cond.IVA:" VerticalAlignment="Center" 
                                               Margin="0,0,8,0" FontWeight="Bold" FontSize="12"/>
                                    <ComboBox x:Name="CmbCondicionIva" Grid.Column="3" 
                                              VerticalAlignment="Center" Margin="0,0,10,0"
                                              BorderBrush="#3498DB" BorderThickness="1" Height="25">
                                        <ComboBoxItem Content="Consumidor Final" IsSelected="True"/>
                                        <ComboBoxItem Content="Responsable Inscripto"/>
                                        <ComboBoxItem Content="Exento"/>
                                        <ComboBoxItem Content="Monotributista"/>
                                    </ComboBox>

                                    <TextBlock Grid.Column="4" Text="Localidad:" VerticalAlignment="Center" 
                                               Margin="0,0,8,0" FontWeight="Bold" FontSize="12"/>
                                    <TextBox x:Name="TxtLocalidad" Grid.Column="5" 
                                             VerticalAlignment="Center"
                                             BorderBrush="#3498DB" BorderThickness="1" Height="25"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- LADO DERECHO - TRES SECCIONES -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 1. Área de cobro negro -->
                    <RowDefinition Height="Auto"/>
                    <!-- 2. Botones F2 y F3 -->
                    <RowDefinition Height="*"/>
                    <!-- 3. Acciones rápidas y logo -->
                </Grid.RowDefinitions>

                <!-- 1. ÁREA DE COBRO (NEGRO) -->
                <Border Grid.Row="0" Background="Black" Margin="0,-23,10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- MONTOS -->
                        <Grid Grid.Row="0" Margin="10" Height="120">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Subtotal" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="Desc./Recargo" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,15"/>
                                <TextBlock Text="Total" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock x:Name="TxtSubtotal" Text="$0.00" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" HorizontalAlignment="Right"/>
                                <TextBlock x:Name="TxtDescuentoRecargo" Text="$0.00" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Right"/>
                                <TextBlock x:Name="TxtTotal" Text="$0.00" Foreground="#3498DB" FontSize="36" FontWeight="Bold" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>

                        <!-- BOTÓN COBRAR -->
                        <Button x:Name="BtnCobrar" Grid.Row="1" Content="F1-Cobrar" 
                                Click="BtnCobrar_Click" Height="60" Margin="0,0,-10,0" Padding="0"
                                FontSize="18" FontWeight="Bold" IsEnabled="False">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#3498DB"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2980B9"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#7F8C8D"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!-- 2. BOTONES F2 Y F3 -->
                <Grid Background="#ECF0F1" Margin="0,10,0,423" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="F2-Nueva Venta" Click="BtnNuevaVenta_Click"
                            Height="35" Margin="10" FontSize="12" FontWeight="Bold"
                            Background="White" Foreground="#3498DB"
                            BorderBrush="#BDC3C7" BorderThickness="1"/>

                    <Button x:Name="BtnVerPrecio" Grid.Column="1" Content="F3-Ver Precio" Click="BtnVerPrecio_Click"
                            Height="35" Margin="10" FontSize="12" FontWeight="Bold"
                            Background="White" Foreground="#3498DB"
                            BorderBrush="#BDC3C7" BorderThickness="1"/>
                </Grid>

                <!-- 3. ACCIONES RÁPIDAS Y LOGO -->
                <Border Grid.Row="2" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Margin="0,21,10,0">
                    <Grid Margin="15,24,15,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="104*"/>
                            <ColumnDefinition Width="199*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="ACCIONES RÁPIDAS" 
                                   FontSize="14" FontWeight="Bold" 
                                   Foreground="#2C3E50" HorizontalAlignment="Left" 
                                   Margin="86,10,0,15" Grid.ColumnSpan="2"/>

                        <StackPanel Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.RowSpan="2">
                            <Button x:Name="BtnDescuento" Content="💰 Aplicar Descuento" 
                                    Height="30" Margin="0,2" FontSize="11" FontWeight="Bold"
                                    BorderThickness="2" BorderBrush="#E67E22"
                                    Background="White" Foreground="#E67E22"
                                    Click="BtnDescuento_Click" IsEnabled="False">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="#E67E22"/>
                                        <Setter Property="BorderBrush" Value="#E67E22"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E67E22"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#F8F9FA"/>
                                                <Setter Property="Foreground" Value="#BDC3C7"/>
                                                <Setter Property="BorderBrush" Value="#BDC3C7"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button x:Name="BtnCupon" Content="🎫 Usar Cupón" 
                                    Height="30" Margin="0,2" FontSize="11" FontWeight="Bold"
                                    BorderThickness="2" BorderBrush="#9B59B6"
                                    Background="White" Foreground="#9B59B6"
                                    Click="BtnCupon_Click" IsEnabled="False">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="#9B59B6"/>
                                        <Setter Property="BorderBrush" Value="#9B59B6"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#9B59B6"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#F8F9FA"/>
                                                <Setter Property="Foreground" Value="#BDC3C7"/>
                                                <Setter Property="BorderBrush" Value="#BDC3C7"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button x:Name="BtnPagoTarjeta" Content="💳 Pago con Tarjeta" 
                                    Height="30" Margin="0,2" FontSize="11" FontWeight="Bold"
                                    BorderThickness="2" BorderBrush="#27AE60"
                                    Background="White" Foreground="#27AE60"
                                    Click="BtnPagoTarjeta_Click" IsEnabled="False">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="#27AE60"/>
                                        <Setter Property="BorderBrush" Value="#27AE60"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#27AE60"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#F8F9FA"/>
                                                <Setter Property="Foreground" Value="#BDC3C7"/>
                                                <Setter Property="BorderBrush" Value="#BDC3C7"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button x:Name="BtnTransferencia" Content="🏦 Transferencia" 
                                    Height="30" Margin="0,2" FontSize="11" FontWeight="Bold"
                                    BorderThickness="2" BorderBrush="#3498DB"
                                    Background="White" Foreground="#3498DB"
                                    Click="BtnTransferencia_Click" IsEnabled="False">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="#3498DB"/>
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#3498DB"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#F8F9FA"/>
                                                <Setter Property="Foreground" Value="#BDC3C7"/>
                                                <Setter Property="BorderBrush" Value="#BDC3C7"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button x:Name="BtnCancelar" Content="❌ Cancelar Venta" 
                                    Height="30" Margin="0,2" FontSize="11" FontWeight="Bold"
                                    BorderThickness="2" BorderBrush="#E74C3C"
                                    Background="White" Foreground="#E74C3C"
                                    Click="BtnCancelar_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                        <Setter Property="BorderBrush" Value="#E74C3C"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E74C3C"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
