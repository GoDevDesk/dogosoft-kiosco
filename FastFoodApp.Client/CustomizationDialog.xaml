<Window x:Class="FastFoodApp.Client.CustomizationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Personalizar Producto" 
        Height="451" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20,20,20,100">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="76"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   x:Name="TxtTitulo"
                   Text="Personalizar: Hamburguesa Clásica" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50"
                   Margin="0,0,0,15"/>

        <!-- Instrucciones -->
        <TextBlock Grid.Row="1" 
                   Text="Agregue notas de personalización (una por línea):"
                   FontSize="12"
                   Foreground="#7F8C8D"
                   Margin="0,0,0,10"/>

        <!-- Área de texto para customizaciones -->
        <TextBox Grid.Row="2" 
                 x:Name="TxtCustomizaciones"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 BorderBrush="#3498DB"
                 BorderThickness="2"
                 Padding="10"
                 FontSize="13"
                 ToolTip="Ejemplos: Sin cebolla, Extra queso, Sin tomate, Punto de cocción: jugoso" Margin="0,0,0,55"/>

        <!-- Sugerencias rápidas -->
        <StackPanel Grid.Row="4" 
                    VerticalAlignment="Center" Height="31">
            <TextBlock Text="Sugerencias comunes:" 
                       FontSize="11" 
                       Foreground="#95A5A6"
                       Margin="0,5,0,5"/>
            <WrapPanel Height="10">
                <Button Content="Sin cebolla" Click="BtnSugerencia_Click" 
                        Margin="0,0,5,5" Padding="8,3" FontSize="10"/>
                <Button Content="Extra queso" Click="BtnSugerencia_Click" 
                        Margin="0,0,5,5" Padding="8,3" FontSize="10"/>
                <Button Content="Sin tomate" Click="BtnSugerencia_Click" 
                        Margin="0,0,5,5" Padding="8,3" FontSize="10"/>
                <Button Content="Bien cocido" Click="BtnSugerencia_Click" 
                        Margin="0,0,5,5" Padding="8,3" FontSize="10"/>
            </WrapPanel>
        </StackPanel>

        <!-- Botones -->
        <Grid Grid.Row="4" Margin="0,1,0,-167">
            <Grid.RowDefinitions>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="217*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Content="✓ Aceptar" 
                    Click="BtnAceptar_Click"
                    Height="35"
                    Margin="0,85,5,96"
                    Background="#27AE60"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="13" Grid.Row="1"/>

            <Button Grid.Column="1" 
                    Content="✗ Cancelar" 
                    Click="BtnCancelar_Click"
                    Height="35"
                    Margin="5,85,0,96"
                    Background="#E74C3C"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="13" Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>