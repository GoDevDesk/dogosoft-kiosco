<Window x:Class="FastFoodApp.Client.SuppliersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Proveedores" Height="600" Width="900" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#FF3498DB"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#FF2C3E50"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#FF5DADE2"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkBlue}"
                Padding="10,8"
                Margin="-15,-15,-15,0">
            <TextBlock Text="PROVEEDORES" 
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="16"/>
        </Border>

        <!-- Buscador -->
        <Grid Grid.Row="1" Margin="0,15,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Buscar:" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       FontWeight="Bold"/>

            <TextBox Grid.Column="1" 
                     x:Name="TxtBuscar"
                     Height="30"
                     VerticalContentAlignment="Center"
                     Padding="5"
                     TextChanged="TxtBuscar_TextChanged"/>

            <Button Grid.Column="2"
                    Content="+ Nuevo Proveedor"
                    Width="150"
                    Height="30"
                    Margin="10,0,0,0"
                    Background="{StaticResource PrimaryBlue}"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnNuevo_Click"/>
        </Grid>

        <!-- DataGrid -->
        <DataGrid Grid.Row="2" 
                  x:Name="DgProveedores"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  BorderBrush="{StaticResource PrimaryBlue}"
                  BorderThickness="1"
                  GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding Id}" 
                                    Width="50"/>

                <DataGridTextColumn Header="Nombre" 
                                    Binding="{Binding Name}" 
                                    Width="*"/>

                <DataGridTextColumn Header="Contacto" 
                                    Binding="{Binding ContactPerson}" 
                                    Width="150"/>

                <DataGridTextColumn Header="Teléfono" 
                                    Binding="{Binding Phone}" 
                                    Width="120"/>

                <DataGridTextColumn Header="Email" 
                                    Binding="{Binding Email}" 
                                    Width="200"/>

                <DataGridTextColumn Header="Fecha Alta" 
                                    Binding="{Binding CreatedAt, StringFormat=dd/MM/yyyy}" 
                                    Width="100"/>

                <DataGridCheckBoxColumn Header="Activo" 
                                        Binding="{Binding IsActive}" 
                                        Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones de acción -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Ver"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="BtnVer_Click"
                    Background="{StaticResource AccentBlue}"
                    Foreground="White"/>

            <Button Content="Editar"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="BtnEditar_Click"
                    Background="{StaticResource PrimaryBlue}"
                    Foreground="White"/>

            <Button Content="Cerrar"
                    Width="80"
                    Height="30"
                    Click="BtnCerrar_Click"
                    Background="#E0E0E0"
                    Foreground="#333333"/>
        </StackPanel>
    </Grid>
</Window>