<Window x:Class="FastFoodApp.Client.PurchaseOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cargar Compra" Height="650" Width="900" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Focusable="True"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#FF3498DB"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#FF2C3E50"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#FF5DADE2"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título con botón de ayuda -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkBlue}"
                Padding="10,8"
                Margin="-15,-15,-15,0">
            <Grid>
                <TextBlock Text="CARGAR COMPRA A PROVEEDOR" 
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"
                           VerticalAlignment="Center"/>

                <Button x:Name="BtnAyuda"
                        Content="❓"
                        Width="28"
                        Height="28"
                        HorizontalAlignment="Right"
                        Background="{StaticResource AccentBlue}"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="BtnAyuda_Click"
                        ToolTip="Ayuda sobre cómo cargar compras (F1)">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="14"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#5DADE2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Datos de la compra -->
        <Grid Grid.Row="1" Margin="0,15,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <!-- Proveedor -->
            <TextBlock Grid.Row="0" Grid.Column="0" 
                       Text="Proveedor: *" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       FontWeight="Bold"/>

            <ComboBox Grid.Row="0" Grid.Column="1"
                      x:Name="CmbProveedor"
                      Height="30"
                      Margin="0,0,15,0"
                      DisplayMemberPath="Name"
                      SelectionChanged="CmbProveedor_SelectionChanged"/>

            <!-- Fecha -->
            <TextBlock Grid.Row="0" Grid.Column="2" 
                       Text="Fecha:" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       FontWeight="Bold"/>

            <DatePicker Grid.Row="0" Grid.Column="3"
                        x:Name="DpFecha"
                        Height="30"/>

            <!-- Agregar producto -->
            <TextBlock Grid.Row="1" Grid.Column="0" 
                       Text="Producto:" 
                       VerticalAlignment="Center"
                       Margin="0,10,10,0"
                       FontWeight="Bold"/>

            <ComboBox Grid.Row="1" Grid.Column="1"
                     x:Name="CmbProducto"
                     Height="30"
                     Margin="0,10,15,0"
                     IsEnabled="False"
                     IsEditable="True"
                     IsTextSearchEnabled="False"
                     StaysOpenOnEdit="True"
                     TextSearch.TextPath="DisplayText"
                     TextBoxBase.TextChanged="CmbProducto_TextChanged"
                     SelectionChanged="CmbProducto_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding ProductCode}" 
                                       FontWeight="Bold" 
                                       Width="80"/>
                            <TextBlock Text=" - "/>
                            <TextBlock Text="{Binding ProductName}"/>
                            <TextBlock Text=" ($" Foreground="Green" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding Cost, StringFormat=N2}" Foreground="Green"/>
                            <TextBlock Text=")" Foreground="Green"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
                    x:Name="BtnAgregar"
                    Content="➕ Agregar (F2)"
                    Height="30"
                    Width="140"
                    Margin="0,10,0,0"
                    Background="{StaticResource PrimaryBlue}"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnAgregar_Click"
                    IsEnabled="False"
                    ToolTip="Presione F2 para agregar rápidamente"/>
        </Grid>

        <!-- DataGrid de productos -->
        <DataGrid Grid.Row="2" 
                  x:Name="DgProductos"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  BorderBrush="{StaticResource PrimaryBlue}"
                  BorderThickness="1"
                  GridLinesVisibility="Horizontal"
                  Margin="0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código" 
                                    Binding="{Binding ProductCode}" 
                                    Width="100"
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Producto" 
                                    Binding="{Binding ProductName}" 
                                    Width="*"
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Cantidad" 
                                    Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Costo Unit." 
                                    Binding="{Binding Cost, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Subtotal" 
                                    Binding="{Binding Subtotal, StringFormat=C}" 
                                    Width="120"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="❌"
                                    Height="24"
                                    Click="BtnQuitar_Click"
                                    Tag="{Binding}"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    ToolTip="Quitar producto"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Total -->
        <Border Grid.Row="3" 
                Background="#F8F9FA"
                Padding="10"
                BorderBrush="{StaticResource PrimaryBlue}"
                BorderThickness="2"
                CornerRadius="5"
                Margin="0,0,0,10">
            <Grid>
                <TextBlock Text="TOTAL:" 
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="TxtTotal" 
                           Text="$0.00"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBlue}"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Botones -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="BtnGuardar"
                    Content="💾 Guardar Compra (F9)"
                    Width="190"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="{StaticResource PrimaryBlue}"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnGuardar_Click"
                    ToolTip="Presione F9 o Ctrl+S para guardar"/>

            <Button Content="Cancelar (Esc)"
                    Width="120"
                    Height="35"
                    Click="BtnCancelar_Click"
                    Background="#E0E0E0"
                    Foreground="#333333"/>
        </StackPanel>
    </Grid>
</Window>