<Window x:Class="FastFoodApp.Client.InventoryAdjustmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajuste de Inventario" Height="500" Width="700" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#FF3498DB"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#FF2C3E50"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkBlue}"
                Padding="10,8"
                Margin="-15,-15,-15,0">
            <TextBlock Text="AJUSTE DE INVENTARIO" 
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="16"/>
        </Border>

        <!-- Buscar producto -->
        <Grid Grid.Row="1" Margin="0,15,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Producto:" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       FontWeight="Bold"/>

            <TextBox Grid.Column="1"
                     x:Name="TxtBuscarProducto"
                     Height="30"
                     VerticalContentAlignment="Center"
                     Padding="5"
                     Margin="0,0,10,0"
                     KeyDown="TxtBuscarProducto_KeyDown"/>

            <Button Grid.Column="2"
                    Content="Buscar"
                    Width="80"
                    Height="30"
                    Background="{StaticResource PrimaryBlue}"
                    Foreground="White"
                    Click="BtnBuscar_Click"/>
        </Grid>

        <!-- Info del producto -->
        <Border Grid.Row="2" 
                x:Name="PanelProducto"
                Background="#F8F9FA"
                Padding="15"
                Margin="0,0,0,10"
                BorderBrush="{StaticResource PrimaryBlue}"
                BorderThickness="2"
                CornerRadius="5"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>

                <!-- Nombre producto -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Producto:" 
                           FontWeight="Bold"
                           Margin="0,0,10,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"
                           x:Name="TxtProductoNombre"
                           Margin="0,0,0,5"/>

                <!-- Stock actual -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Stock actual:" 
                           FontWeight="Bold"
                           Margin="0,0,10,10"/>
                <TextBlock Grid.Row="1" Grid.Column="1"
                           x:Name="TxtStockActual"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBlue}"
                           Margin="0,0,0,10"/>

                <!-- Tipo de ajuste -->
                <TextBlock Grid.Row="1" Grid.Column="2" 
                           Text="Tipo:" 
                           FontWeight="Bold"
                           Margin="15,0,10,10"/>
                <ComboBox Grid.Row="1" Grid.Column="3"
                          x:Name="CmbTipoAjuste"
                          Height="30"
                          Margin="0,0,0,10"
                          SelectionChanged="CmbTipoAjuste_SelectionChanged">
                    <ComboBoxItem Content="Ajuste +" IsSelected="True"/>
                    <ComboBoxItem Content="Ajuste -"/>
                </ComboBox>

                <!-- Cantidad y motivo -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="Cantidad:" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBox Grid.Row="2" Grid.Column="1"
                         x:Name="TxtCantidad"
                         Height="30"
                         Width="100"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Padding="5"
                         Text="0"/>

                <TextBlock Grid.Row="2" Grid.Column="2" 
                           Text="Motivo:" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="15,0,10,0"/>
                <TextBox Grid.Row="2" Grid.Column="3"
                         x:Name="TxtMotivo"
                         Height="30"
                         VerticalContentAlignment="Center"
                         Padding="5"/>
            </Grid>
        </Border>

        <!-- Historial de ajustes -->
        <GroupBox Grid.Row="3" Header="Historial de Ajustes Recientes" 
                  BorderBrush="{StaticResource PrimaryBlue}"
                  Margin="0,0,0,10">
            <DataGrid x:Name="DgHistorial"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fecha" 
                                        Binding="{Binding Date, StringFormat=dd/MM/yyyy HH:mm}" 
                                        Width="130"/>
                    <DataGridTextColumn Header="Producto" 
                                        Binding="{Binding ProductName}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="Tipo" 
                                        Binding="{Binding MovementType}" 
                                        Width="80"/>
                    <DataGridTextColumn Header="Cantidad" 
                                        Binding="{Binding Quantity}" 
                                        Width="80"/>
                    <DataGridTextColumn Header="Motivo" 
                                        Binding="{Binding Reason}" 
                                        Width="200"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Botones -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="BtnGuardar"
                    Content="Guardar Ajuste"
                    Width="120"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="{StaticResource PrimaryBlue}"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnGuardar_Click"
                    IsEnabled="False"/>

            <Button Content="Cerrar"
                    Width="80"
                    Height="35"
                    Click="BtnCerrar_Click"
                    Background="#E0E0E0"
                    Foreground="#333333"/>
        </StackPanel>
    </Grid>
</Window>