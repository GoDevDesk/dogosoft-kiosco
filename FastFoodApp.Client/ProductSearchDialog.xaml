<Window x:Class="FastFoodApp.Client.ProductSearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Búsqueda Avanzada de Productos" Height="600" Width="900" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#FF3498DB"/>
        <SolidColorBrush x:Key="LightBlue" Color="#FFEBF5FB"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#FF2C3E50"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#FF5DADE2"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título con botón de ayuda -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkBlue}"
                Padding="10,8"
                Margin="-15,-15,-15,0">
            <Grid>
                <TextBlock Text="BÚSQUEDA AVANZADA DE PRODUCTOS" 
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"
                           VerticalAlignment="Center"/>

                <Button x:Name="BtnAyuda"
                        Content="❓"
                        Width="28"
                        Height="28"
                        HorizontalAlignment="Right"
                        Background="{StaticResource AccentBlue}"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="BtnAyuda_Click"
                        ToolTip="Ayuda sobre cómo buscar productos (F1)">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="14"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#5DADE2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Buscador -->
        <Grid Grid.Row="1" Margin="0,15,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Buscar:" 
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Margin="0,0,10,0"/>

            <TextBox Grid.Column="1" 
                     x:Name="TxtBuscar"
                     Height="35"
                     VerticalContentAlignment="Center"
                     Padding="5"
                     FontSize="14"
                     TextChanged="TxtBuscar_TextChanged"
                     BorderBrush="{StaticResource PrimaryBlue}"
                     BorderThickness="2"/>

            <TextBlock Grid.Column="2" 
                       Text="(Escriba al menos 2 caracteres para buscar)"
                       VerticalAlignment="Center"
                       Foreground="#999"
                       FontSize="10"
                       Margin="10,0,0,0"/>
        </Grid>

        <!-- Productos disponibles -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Productos Disponibles:" 
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>

            <!-- Mensaje inicial -->
            <Border x:Name="BorderMensajeInicial"
                    Background="{StaticResource LightBlue}"
                    BorderBrush="{StaticResource PrimaryBlue}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="20"
                    Margin="0,10,0,0"
                    Visibility="Visible">
                <StackPanel>
                    <TextBlock Text="🔍 Comience a escribir para buscar productos" 
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource DarkBlue}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Puede buscar por código, nombre o categoría del producto."
                               TextWrapping="Wrap"
                               Foreground="#666666"
                               FontSize="11"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <DataGrid x:Name="DgProductos"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      BorderBrush="{StaticResource PrimaryBlue}"
                      BorderThickness="2"
                      Margin="0,25,0,0"
                      Visibility="Collapsed"
                      MouseDoubleClick="DgProductos_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Código" 
                                        Binding="{Binding Code}" 
                                        Width="100"/>
                    <DataGridTextColumn Header="Nombre" 
                                        Binding="{Binding Name}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="Categoría" 
                                        Binding="{Binding CategoryName}" 
                                        Width="120"/>
                    <DataGridTextColumn Header="Precio" 
                                        Binding="{Binding Price, StringFormat=C}" 
                                        Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Stock" 
                                        Binding="{Binding Stock}" 
                                        Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="➕ Agregar"
                                        Height="26"
                                        Click="BtnAgregarProducto_Click"
                                        Tag="{Binding}"
                                        Background="{StaticResource PrimaryBlue}"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontWeight="Bold"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- Productos seleccionados -->
        <TextBlock Grid.Row="3" 
                   Text="Productos Seleccionados para Agregar:" 
                   FontWeight="Bold"
                   Margin="0,10,0,5"/>

        <DataGrid Grid.Row="4" 
                  x:Name="DgSeleccionados"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  BorderBrush="#27AE60"
                  BorderThickness="2"
                  Margin="0,25,0,10"
                  Background="#F0FFF4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código" 
                                    Binding="{Binding Code}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Nombre" 
                                    Binding="{Binding Name}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Cantidad" 
                                    Binding="{Binding Cantidad}" 
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Precio" 
                                    Binding="{Binding Price, StringFormat=C}" 
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Subtotal" 
                                    Binding="{Binding Subtotal, StringFormat=C}" 
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="#27AE60"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="❌"
                                    Height="26"
                                    Click="BtnQuitarProducto_Click"
                                    Tag="{Binding}"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    ToolTip="Quitar"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <TextBlock x:Name="TxtTotal"
                       Text="Total: $0.00"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBlue}"
                       VerticalAlignment="Center"
                       Margin="0,0,20,0"/>

            <Button Content="✓ Agregar Todos a la Venta (F9)"
                    Width="230"
                    Height="40"
                    Margin="0,0,10,0"
                    Background="#27AE60"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="14"
                    Click="BtnAgregarTodos_Click"
                    IsEnabled="{Binding ElementName=DgSeleccionados, Path=HasItems}"
                    ToolTip="Presione F9 para confirmar"/>

            <Button Content="Cancelar (Esc)"
                    Width="130"
                    Height="40"
                    Click="BtnCancelar_Click"
                    Background="#E0E0E0"
                    Foreground="#333333"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>