<Window x:Class="FastFoodApp.Client.PriceListsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Listas de Precios" Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#FF3498DB"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#FF2C3E50"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#FF5DADE2"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título con botón de ayuda -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkBlue}"
                Padding="10,8"
                Margin="-15,-15,-15,0">
            <Grid>
                <TextBlock Text="LISTAS DE PRECIOS" 
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"
                           VerticalAlignment="Center"/>

                <Button x:Name="BtnAyuda"
                        Content="❓"
                        Width="28"
                        Height="28"
                        HorizontalAlignment="Right"
                        Background="{StaticResource AccentBlue}"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="BtnAyuda_Click"
                        ToolTip="Ayuda sobre listas de precios (F1)">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="14"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#5DADE2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" 
                  x:Name="DgListas"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  BorderBrush="{StaticResource PrimaryBlue}"
                  BorderThickness="2"
                  Margin="0,15,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" 
                                    Binding="{Binding Name}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Descripción" 
                                    Binding="{Binding Description}" 
                                    Width="2*"/>
                <DataGridTextColumn Header="Estado" 
                                    Binding="{Binding EstadoTexto}" 
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                    <Setter Property="Foreground" Value="#27AE60"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                    <Setter Property="Foreground" Value="#E74C3C"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Protegida" 
                                    Binding="{Binding ProtegidaTexto}" 
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="✏️ Editar"
                                        Width="70"
                                        Height="28"
                                        Margin="2"
                                        Click="BtnEditar_Click"
                                        Tag="{Binding}"
                                        Background="{StaticResource PrimaryBlue}"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"/>

                                <Button Content="❌ Eliminar"
                                        Width="80"
                                        Height="28"
                                        Margin="2"
                                        Click="BtnEliminar_Click"
                                        Tag="{Binding}"
                                        Background="#E74C3C"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Visibility="{Binding EsEliminableVisibility}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="➕ Nueva Lista (F2)"
                    Width="150"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="{StaticResource PrimaryBlue}"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnNuevo_Click"
                    ToolTip="Presione F2 para crear una nueva lista"/>

            <Button Content="Cerrar (Esc)"
                    Width="120"
                    Height="35"
                    Click="BtnCerrar_Click"
                    Background="#E0E0E0"
                    Foreground="#333333"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>