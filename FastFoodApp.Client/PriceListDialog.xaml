<Window x:Class="FastFoodApp.Client.PriceListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista de Precios" Height="259" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#FF3498DB"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#FF2C3E50"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   x:Name="TxtTitulo"
                   Text="NUEVA LISTA DE PRECIOS"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="{StaticResource DarkBlue}"
                   Margin="0,0,0,20"/>

        <!-- Nombre -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Nombre: *" 
                       VerticalAlignment="Center"
                       FontWeight="Bold"/>

            <TextBox Grid.Column="1" 
                     x:Name="TxtNombre"
                     Height="30"
                     VerticalContentAlignment="Center"
                     BorderBrush="{StaticResource PrimaryBlue}"
                     BorderThickness="2"/>
        </Grid>

        <!-- Descripción -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
               Text="Descripción:" 
               VerticalAlignment="Center"
               FontWeight="Bold"/>

            <TextBox Grid.Column="1" 
             x:Name="TxtDescripcion"
             Height="30"
             MaxLength="100"
             VerticalContentAlignment="Center"
             BorderBrush="{StaticResource PrimaryBlue}"
             BorderThickness="2"/>
        </Grid>

        <!-- Estado -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Estado:" 
                       VerticalAlignment="Center"
                       FontWeight="Bold"/>

            <CheckBox Grid.Column="1" 
                      x:Name="ChkActiva"
                      Content="Lista activa"
                      IsChecked="True"
                      VerticalAlignment="Center"/>
        </Grid>

        <!-- Mensaje de protección -->
        <Border Grid.Row="4" 
                x:Name="BorderProtegida"
                Background="#FFF3CD"
                BorderBrush="#FFE082"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10"
                Visibility="Collapsed"
                Margin="0,0,0,15">
            <TextBlock Text="⚠️ Esta es una lista protegida del sistema. Solo puede modificar su descripción y estado."
                       TextWrapping="Wrap"
                       Foreground="#856404"
                       FontSize="11"/>
        </Border>

        <!-- Botones -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Guardar"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="{StaticResource PrimaryBlue}"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnGuardar_Click"/>

            <Button Content="Cancelar"
                    Width="100"
                    Height="35"
                    Click="BtnCancelar_Click"
                    Background="#E0E0E0"
                    Foreground="#333333"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>