<Window x:Class="FastFoodApp.Client.SimpleInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ingresar clave" Height="150" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TxtMessage" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="InputBox" Grid.Row="1" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Aceptar" Width="80" Margin="0,0,10,0" Click="BtnOk_Click"/>
            <Button Content="Cancelar" Width="80" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
